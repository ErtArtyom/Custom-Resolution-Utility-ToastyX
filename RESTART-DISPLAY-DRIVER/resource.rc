IDD_RESTART DIALOG 0, 0, 100, 78
CAPTION RESTART_VERSION
FONT 9, _T("Segoe UI")
STYLE DS_CENTER | DS_MODALFRAME | WS_SYSMENU
BEGIN
	CTEXT			_T("Graphics driver restarted."), IDC_STATIC, 0, 8, 100, 8
	PUSHBUTTON		_T("Restart again"), IDC_RESTART, 12, 24, 76, 14
